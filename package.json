{
  "name": "nodejs-authentication",
  "version": "0.0.1",
  "main": "index.ts",
  "repository": "https://github.com/FilipK999/nodejs-authentication.git",
  "author": "Filip <filipkrayem@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.11",
    "apollo-server-express": "^2.22.1",
    "concurrently": "^6.0.0",
    "cpx": "^1.5.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "watch": "tsc -w --pretty",
    "dev": "nodemon dist/index.js",
    "gql": "graphql-codegen --config codegen.yml --watch -e",
    "copy-schema": "cpx src/**/*.graphql dist/schema",
    "start": "concurrently \"yarn copy-schema\" \"yarn dev\" \"yarn gql\" "
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-resolvers": "^1.19.0",
    "@graphql-tools/graphql-file-loader": "^6.2.7",
    "@graphql-tools/load": "^6.2.7",
    "@swc/core": "^1.2.51",
    "@types/graphql": "^14.5.0",
    "nodemon": "^2.0.7"
  }
}
